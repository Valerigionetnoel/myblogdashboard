<h1>
    <a href="/blogpost/{{id}}">{{name}}</a>
</h1>
<p>{{description}}</p>
<div>
    <div class="new-comment-form">
        <div class="form-group">
            <label for="comment-title">Comment title</label>
            <input type="text" id="comment-title" name="comment-title" />
        </div>
        <div class="form-group">
            <label for="comment-desc">Enter comment</label>
            <input type="text" id="comment-desc" name="comment-desc" />
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Add a comment</button>
      </div>
    </div>

    {{body}}
</div>

<script src="./js/comment.js"></script>