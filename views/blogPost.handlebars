<h1>
    {{name}}
</h1>
<p>{{description}}</p>
<div>
    {{#each comment}}
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    {{/each}}
</div>
<div>
    <form class="new-comment-form">
        <div class="form-group">
            <label for="comment-title">Comment title</label>
            <input type="text" id="comment-title" name="comment-title" />
        </div>
        <div class="form-group">
            <label for="comment-desc">Enter comment</label>
            <input type="text" id="comment-desc" name="comment-desc" />
        </div>
        <div class="form-group">
        <button type="submit" id="submitcomment" class="btn btn-primary">Add a comment</button>
      </div>
    </form>

    {{body}}
</div>

<script src="/js/comment.js"></script>